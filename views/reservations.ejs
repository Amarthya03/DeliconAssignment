<%- include('partials/header') %>
    <body>
        <div class="container" style="margin-top: 10px;">
            <div class="text-center">
                <h1 style="font-size: 40px;" class="kHeading kHeadingStyles">All Reservations</h1>
            </div>
            <hr>
            <% reservations.forEach(function(x) { %>
                <div class="card" style="width: 100%; margin: 5px;">
                    <div class="card-body">
                        <h5 class="card-title kSubheading"><%= x.uname %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Bathroom: <%= x.bathroom %></h6>
                        <h6 class="card-subtitle mb-2 text-muted">Beds: <%= x.beds %></h6>
                        <h6 class="card-subtitle mb-2 text-muted">Food: <%= x.food %></h6>
                        <h6 class="card-subtitle mb-2 text-muted">Food: <%= x.date %></h6>
                        <div class="text-right">
                            <form action="/reservation/<%= x._id %>?_method=DELETE" method="POST">
                                <a href="/reservation/<%= x._id %>/edit" class="custom-btn btn-15 text-center" style="text-decoration: none; width: 100px; color: black;">Edit</a>
                                <input type="submit" class="custom-btn btn-15" style="width: 100px; color: black;" value="Delete">
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </body>
<%- include('partials/footer') %>